<div class="top-content">

  <%# 左上メニュー %>
  <div class="top-right">
    <%= link_to "すくれぴとは？", "/", class: "text" %> / 
    <%= link_to "ログアウト", "/", class: "text" %>
  </div>

  <%# ロゴ画像 %>
  <%= link_to image_tag("screpi-logo1.png", class:"top-logo"), "/" %>
  
  <%# 検索（送信ボタンは）一体化する予定 %>
  <div class="top-search">
    <%= form_with url:'/', method: :get, local: true do |f| %>
      <%= f.text_field :keyword, class: "search-form" %>
      <%= button_tag :type => "submit", class: "search-button" do %>
        <i class="fa fa-search"></i>
      <% end %>
    <% end %>
  </div>
</div>