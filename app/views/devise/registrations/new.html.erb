<div class="content">
  <%= render "shared/top-content" %>
  <%= render "shared/menu-bar" %>

  <div class="main-contents">

    <%= render "shared/side-bar" %>

    <div class="registration-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>


        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :name, autofocus: true, class:"form-field" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-field" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-field" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-field" %>
        </div>
        
        <div class="field icon-field">
          <div class="icon-field-label">好きなアイコンを選んでください。</div>
          <label><%= f.radio_button :user_icon_id, 2 %><i class="far fa-smile"></i></label>
          <label><%= f.radio_button :user_icon_id, 3 %><i class="fas fa-apple-alt"></i></label>
          <label><%= f.radio_button :user_icon_id, 4 %><i class="fas fa-carrot"></i></label>
          <label><%= f.radio_button :user_icon_id, 5 %><i class="fas fa-fish"></i></label>
          <label><%= f.radio_button :user_icon_id, 6 %><i class="fas fa-mug-hot"></i></label>
          <label><%= f.radio_button :user_icon_id, 7 %><i class="fas fa-cat"></i></i></label>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"button" %>
        </div>
      <% end %>
    </div>

  </div>

  <div class="bottom-content">
    <%= render "shared/bottom-content"%>
  </div>

</div>

